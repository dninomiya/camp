service cloud.firestore {
  match /databases/{database}/documents {
    function isSignIn() {
      return request.auth.uid != null;
    }

    function isOwner(id) {
      return request.auth.uid == id;
    }

    function safeKey(key) {
      return request.resource.data[key] == resource.data[key];
    }

    function safeId() {
      return request.resource.data.id == resource.data.id;
    }

    match /users/{uid} {
      allow read: if isOwner(uid);
      allow write: if safeId();
      match /{document=**} {
        allow read, write: if isOwner(uid);
      }
    }

    match /threads/{threadId} {
      allow create: if request.auth.uid != null;
      allow update: if (request.auth.uid == resource.data.authorId || request.auth.uid == resource.data.targetId) && safeKey('id') && safeKey('targetId') && safeKey('authorId');
      allow read: if request.auth.uid == resource.data.authorId || request.auth.uid == resource.data.targetId;
      match /replies/{replieId} {
        allow read, write: if true;
      }
    }

    match /csrf/{doc} {
      allow create: if request.auth.uid == request.resource.data.uid;
      allow read, delete: if request.auth.uid == resource.data.uid;
    }

    match /channels/{channelId} {
      allow read: if true;
      allow update: if safeKey('id') && isOwner(channelId) && isOwner(resource.data.authorId);
      match /likes/{lessonId} {
        allow read, write: if isOwner(channelId)
      }
      match /followers/{uid} {
        allow read: if true
        allow write: if isOwner(uid);
      }
      match /follows/{uid} {
        allow read: if true
      }
      match /plans/{planId} {
        allow read: if true;
        allow write: if isOwner(channelId);
      }
      match /jobs/data {
        allow read: if true;
        allow write: if isOwner(channelId);
      }
      match /reviews/{reviewId} {
        allow read: if true;
        allow write: if isSignIn();
      }
    }
    match /lessons/{lessonId} {
      allow read: if resource.data.public == true || isOwner(resource.data.authorId);
      allow create: if isSignIn();
      allow update: if isOwner(resource.data.authorId) && safeId() && safeKey('authorId');
      match /body/content {
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan != 'free';
        allow create: if isSignIn();
        allow update: if get(/databases/$(database)/documents/lessons/$(lessonId)).data.authorId == request.auth.uid;
      }
    }
    match /lists/{listId} {
      allow read: if true;
      allow create: if isSignIn();
      allow update: if isOwner(resource.data.authorId) && safeId() && safeKey('authorId');
      allow delete: if isOwner(resource.data.authorId);
    }
  }
}
